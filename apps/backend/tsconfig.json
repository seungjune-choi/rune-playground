{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "lib": ["ES2022"],
    "outDir": "dist",
    "rootDir": "./",
    "baseUrl": ".",
    "paths": {
      "@backend/*": ["src/*"],
      "@libs/*": ["libs/*"],
    },
    "moduleResolution": "nodeNext",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "verbatimModuleSyntax": false,
    "noEmit": false
  },
  "exclude": ["../../node_modules", "node_modules"],
  "include": ["src/**/*", "libs/**/*"]
}
